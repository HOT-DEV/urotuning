<div class="CarProfile CarProfileBuilder">
  <h1>{{ settings.profile_builder_title }}</h1>
  <h2 class="CarProfile__yearTitle"></h2>  
    
    <div class="CarProfile__signUp">
      <div class="CarProfile__carImage"></div>
      <div class="CarProfile__signUp--creditGraphic">
