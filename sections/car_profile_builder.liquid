            <button class="detailDropSelect">
              <p>Select Make</p>
              <span class="down-icon"></span>
            </button>
            <div class="detailDropOptions"></div>
          </div>
        </div>

        <div class="detailDrop" data-select="series">
          <label>Series</label>
          <div class="detailDrop__content">
            <button class="detailDropSelect">
              <p>Select Series</p>
