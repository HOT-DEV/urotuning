                <p>Select Diameter</p>
                <span class="down-icon"></span>
              </button>
              <div class="wheelDropOptions"></div>
            </div>
          </div>

          <div class="wheelDrop" data-option="width">
            <label>Width</label>
            <div class="wheelDrop__content">
              <button class="wheelDropSelect">
                <p>Select Width</p>
                <span class="down-icon"></span>
              </button>
              <div class="wheelDropOptions"></div>
            </div>
          </div>

          <div class="wheelInput offsetInput">
            <label>Offset</label>
            <div class="wheelInput__content">
              <input type="number" data-value="offset" value="">
            </div>
