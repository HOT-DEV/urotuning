              <button class="wheelDropSelect">
                <p>Select Tire Width</p>
                <span class="down-icon"></span>
              </button>
              <div class="wheelDropOptions"></div>
            </div>
          </div>

          <div class="wheelDrop" data-option="tireAspectRatio">
            <label>Tire Aspect Ratio</label>
            <div class="wheelDrop__content">
              <button class="wheelDropSelect">
                <p>Select Tire Aspect Ratio</p>
                <span class="down-icon"></span>
              </button>
              <div class="wheelDropOptions"></div>
            </div>
          </div>
        </div>

        <div class="staggeredWheels">


          <div class="wheelSide">
            <h4>Front</h4>

            <div class="wheelDrop" data-option="diameterFront">
              <label>Diameter</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Diameter</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>

            <div class="wheelDrop" data-option="widthFront">
              <label>Width</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Width</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>

            <div class="wheelInput offsetInput">
              <label>Offset</label>
              <div class="wheelInput__content">
                <input type="number" data-value="offsetFront" value="">
              </div>
            </div>

            <div class="wheelDrop" data-option="tireWidthFront">
              <label>Tire Width</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Tire Width</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>

            <div class="wheelDrop" data-option="tireAspectRatioFront">
              <label>Tire Aspect Ratio</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Tire Aspect Ratio</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>
          </div>

          <div class="wheelSide">
            <h4>Rear</h4>

            <div class="wheelDrop" data-option="diameterRear">
              <label>Diameter</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Diameter</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>

            <div class="wheelDrop" data-option="widthRear">
              <label>Width</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Width</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>

            <div class="wheelInput offsetInput">
              <label>Offset</label>
              <div class="wheelInput__content">
                <input type="number" data-value="offsetRear" value="">
              </div>
            </div>

            <div class="wheelDrop" data-option="tireWidthRear">
              <label>Tire Width</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Tire Width</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>

            <div class="wheelDrop" data-option="tireAspectRatioRear">
              <label>Tire Aspect Ratio</label>
              <div class="wheelDrop__content">
                <button class="wheelDropSelect">
                  <p>Select Tire Aspect Ratio</p>
                  <span class="down-icon"></span>
                </button>
                <div class="wheelDropOptions"></div>
              </div>
            </div>
          </div>
        </div>

        <div class="wheelDrop" data-option="frontWheelSpacers">
          <label>Front Wheel Spacers</label>
          <div class="wheelDrop__content">
            <button class="wheelDropSelect">
              <p>Select Front Wheel Spacers</p>
              <span class="down-icon"></span>
            </button>
            <div class="wheelDropOptions"></div>
          </div>
        </div>

        <div class="wheelDrop" data-option="rearWheelSpacers">
          <label>Rear Wheel Spacers</label>
          <div class="wheelDrop__content">
            <button class="wheelDropSelect">
              <p>Select Rear Wheel Spacers</p>
